@model IEnumerable<Nagarro.BookEventManagement.Shared.CommentDTO>
<h3>Comments of Different Users</h3>
<table class="table table-bordered table-responsive table-hover table-striped table-bordered table-responsive table-condensed">
    <tr class="warning">
        <th>
            Comments
        </th>
        <th>
            Event Date
        </th>
        <th>
            User
        </th>
        <th>
            Event Title
        </th>

        
    </tr>

    @foreach (var item in Model)
    {
        <tr class="info">

            <td>
                @Html.DisplayFor(modelItem => item.Comment1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>

        </tr>
    }

</table>
