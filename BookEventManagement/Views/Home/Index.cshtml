@model BookEventManagement.Models.EventViewModel

@{
    ViewBag.Title = "Home Page";
}


<h2>Book Reading Events</h2>
<h3>@DateTime.Today</h3>


<div class="row">
    <div class="col-md-6">
        <h3>Past Events</h3>
        <table class="table table-striped table-responsive table-bordered table-hover">
            @foreach (var i in Model.Events)
            {
                if (i.Date < DateTime.Today)
                {
                    <tr><td>@i.Title</td></tr>
                }

            }
        </table>
    </div>

    <div class="col-md-6">
        <h3>Future Events</h3>
        <table class="table table-striped table-responsive table-bordered table-hover">
            @foreach (var i in Model.Events)
            {
                if (i.Date >= DateTime.Today)
               {
                    <tr><td>@i.Title</td></tr>
                }
            }
        </table>
    </div>
</div>





